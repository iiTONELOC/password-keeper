{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declarationDir": "./dist/types",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/client/**/*"],
  "exclude": ["dist/**/*", "node_modules", "src/server/**/*", "src/**/**/*.test.ts"]
}
