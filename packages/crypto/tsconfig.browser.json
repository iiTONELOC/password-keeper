{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declarationDir": "./dist/types",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/browser/**/*"],
  "exclude": ["node_modules", "dist", "src/node", "src/**/**/*.test.ts"]
}
