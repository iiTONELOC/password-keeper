{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo"
  },

  "extends": "../../tsconfig.json",
  "include": ["src/**/*", "rollup.config.mjs"],
  "exclude": [
    "dist/**/*",
    "test-scripts",
    "node_modules",
    ".rollup.cache/",
    "src/**/*.test.ts",
    "src/utils/testHelpers/*"
  ]
}
