{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declarationDir": "./dist/types",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "test-scripts"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts", "test-scripts"]
}
