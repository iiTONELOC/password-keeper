{
  "compilerOptions": {
    "rootDir": "./",
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["eslint.config.mjs"],
  "exclude": [
    "node_modules",
    "dist",
    "packages/*/node_modules",
    "*.spec.ts",
    "*.test.ts",
    "*.spec.tsx",
    "*.test.tsx",
    "*.d.ts",
    "*.config.js",
    "*.config.ts",
    "*.config.mjs",
    "*.config.cjs",
    "*.config.json"
  ]
}
